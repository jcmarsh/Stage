# find_target.world
# A simple scenario where the robot must find the target.
# Author: James Marshall
# Date: Feb 25 2013

include "gridcar.inc"
include "target.inc"
include "map.inc"

window
(
	size [ 900 900 ]
	scale 40
	
	show_data 1
)

floorplan
(
	name "grid"
	size [16 16 .8]
	pose [0 0 0 0]
	bitmap "bitmaps/u_shape.png"
)

target
(
	name "target0"
	pose [7 7 0 0]
)

gridcar
(
	name "hank"
	pose [-7 -7 0 0] # Important: start angle is not parsed! Assumed to be 0
	color "blue"
)
